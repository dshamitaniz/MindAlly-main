# Database
MONGODB_URI=mongodb://localhost:27017/mental-health-app

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# AI Services (Choose one or both)
# Google AI (Recommended - Free tier available)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Ollama (Local AI - Docker required)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:latest

# Crisis Detection
CRISIS_DETECTION_ENABLED=true
CRISIS_LOG_RETENTION_DAYS=30

# Therapist Directory
THERAPIST_VERIFICATION_ENABLED=true

# Email (optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@mentalhealthapp.com
